<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <EditText
        android:id="@+id/fragment_note_form_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:hint="@string/note_title"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/fragment_note_form_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:background="@android:color/transparent"
        android:hint="@string/note_description"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/fragment_note_form_title"
        app:layout_constraintStart_toStartOf="@id/fragment_note_form_title"
        app:layout_constraintTop_toBottomOf="@id/fragment_note_form_title" />

</android.support.constraint.ConstraintLayout>